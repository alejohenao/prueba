<%- model_class = Instructor -%>
<div class="page-header">
  <h1>Instructores</h1>
 </div>
<%= form_tag request.path, :method => 'get' do %>
<%= content_tag :label do %>

Nombre instructor:
<%= text_field_tag :search, params[:search] %>
<%= submit_tag "Consultar", :name => nil, :class => 'btn-success'  %>
<% end %>
<% end %>
<br />
<div id="opag">
<%= form_tag request.path, :method => 'get' do %> 
<%= content_tag :label do %> 
Seleccione numero de registros por pagina:
<br>
<%= text_field_tag :limit, params[:limit] , :id=>'num'%> 
<%= submit_tag "Aceptar", :name => nil, :class => 'btn-success' %> 
 
<% end %> 
<% end %>
</div>



<table class="table table-striped table-bordered table-condensed pretty">
  <thead>
    <tr>
      <th><%= sortable "id" %></th>
      <th><%= sortable "nombres" %></th>
      <th><%= sortable "cedula" %></th>
      <th><%= sortable "email" %></th>
      <th><%= sortable "direccion" %></th>
      <th><%= sortable "telefono" %></th>
      <th><%= sortable "fch_nacimiento" %></th>
      <th><%= sortable "materia_id" %></th>
      
      
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @instructores %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'Nuevo Instructor', new_instructor_path, :remote => true, :class=> "btn btn-medium btn-primary" %></td>
    </tr>
  </tfoot>
</table>

<br />
<br />
<div align="center">
<%= will_paginate @instructores, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %>
</div>
<p>
Total Instructores : <%= @instructores.total_entries %>
</p>
