<%= simple_form_for(@curso, :html => { :class => 'form-horizontal' }, :remote => true) do |f| %>

  <%= f.error_notification %>
 
 
  <%= f.input :ficha, :label => "ficha",  :required => true %>
  <%= f.input :nombre, :label => "nombre",  :required => true %>
  
   
  <div class="form-actions">
    <%= f.submit "guardar", :class => 'btn btn-primary' %>
    <%= link_to 'Atras', cursos_path, :class => 'btn btn-small' %>
  </div>
<% end %>
