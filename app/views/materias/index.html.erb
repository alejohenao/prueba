<%- model_class = Materia -%>
<div class="page-header">
  <h1>Materias</h1>
</div>
<%= form_tag request.path, :method => 'get' do %>
<%= content_tag :label do %>
Nombre de materia:
<%= text_field_tag :search, params[:search] %>
<%= submit_tag "Consultar", :name => nil %>
<% end %>
<% end %>
<br/>

<div id="opag">
<%= form_tag request.path, :method => 'get' do %> 
<%= content_tag :label do %> 
Seleccione numero de registros por pagina:
<br>
<%= text_field_tag :limit, params[:limit] , :id=>'num'%> 
<%= submit_tag "Aceptar", :name => nil %> 
<% end %> 
<% end %>
</div>

<table class="table table-striped table-bordered table-condensed pretty">
  <thead>
    <tr>

      <th><%= sortable "id" %></th>
      <th><%= sortable "nombres" %></th>
      <th><%= sortable "created_at" %></th>
    
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
      
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @materias %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'Nueva materia', new_materia_path, :remote => true, :class=> "btn btn-medium btn-danger" %></td>
    </tr>
  </tfoot>
</table>

<br />
<br />
<div align="center">
<%= will_paginate @materias, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %>
</div>
<p>
Total Materias: <%= @materias.total_entries %>
